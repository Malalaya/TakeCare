<div class = "container">
<h1>Invite friends & family</h1>
  <%= simple_form_for [@funeral, @relative] do |f| %>
    <div class="form-inputs">
      <%= f.association :user, collection: User.where.not(id: current_user.id),
                        input_html: { multiple: false, data: { controller: "tom-select" }}     %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'button-blue', value: 'Invite' %>
    </div>
  <% end %>
</div>
