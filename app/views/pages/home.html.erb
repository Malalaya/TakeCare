<% content_for :mainpage do %>
  <%= render "components/banner" %>

  <div class="main-container">

  <h4>Wishes. Memories. Legacies.</h4>
  <h1 style="font-weight:bold;">Decide what you leave behind.</h1>
    <% if user_signed_in? %>


    <div class="cards">
      <% if @relatives2 %>
        <% @relatives2.each do |relative2| %>
          <%= link_to userprofile_path(relative2.funeral.user), class:"card-category", style: "background-image: url(#{relative2.funeral.user.avatar.attached? ? cl_image_path(relative2.funeral.user.avatar.key) : ""})" do %>
          <h2><%= relative2.funeral.user.name %></h2>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <% if user_signed_in?%>
        <div class="intern">
          <h5>Discuss your thoughts with friends & family</h5>
          <h2>Share to TakeCare</h2>
          <div style="button text-align: center;">
            <%= link_to "Invite", new_funeral_relative_path(@funeral), class: 'button-blue' %>
          </div>
        <% end %>
      </div>

      <% else%>
          <br>
          <%= link_to "Register now", new_user_session_path, class: "button-blue" %>
      <% end %>
      <br>
      <%= render "components/cardssquare" %>
    </div>
  </div>
</div>

<% end %>
