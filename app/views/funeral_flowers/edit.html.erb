<h1>Flowers edit page</h1>

<%= simple_form_for [@funeral, @funeral_flower] do |f| %>
  <div class="form-inputs">
    <%= f.input :flower_id, collection: Flower.all,
                      input_html: { multiple: false, data: { controller: "tom-select" }}     %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
