<div class="container">
  <h1> Funeral guests</h1>

  <%= simple_form_for [@funeral, @guest] do |f| %>
    <div class="form-inputs">
      <%= f.input :guest_list %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'button-blue', value: "Invite"  %>
    </div>
  <% end %>
</div>
