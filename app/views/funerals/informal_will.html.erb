<% content_for :mainpage do %>

<%= render "shared/user_navbar" %>

<div class="container">
  <h1>Informal Will</h1>
<% if user_signed_in? && (@user == current_user || current_user.relatives.where(user_id: @user).exists?) %>
  <div class="card-will">
    <p><%= @funeral.informal_will %></p>
  </div>

    <%= simple_form_for(@funeral) do |f| %>
      <div class="form-inputs">
        <%= f.rich_text_area :informal_will %>
      </div>
      <br>

      <div class="form-actions">
        <%= f.button :submit, value: 'Edit' %>
      </div>
      <br>

    <% end %>
  <br>
  <br>
</div>
<% else %>
  <div class="card-will">
    <p>Sorry, you are not authorized to view this page.</p>
  </div>
  <% end %>
<% end %>
